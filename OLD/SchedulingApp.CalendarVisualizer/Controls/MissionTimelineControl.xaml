<UserControl
    x:Class="SchedulingApp.CalendarVisualizer.Controls.MissionTimelineControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SchedulingApp.CalendarVisualizer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="120"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Main.xaml" />
    </UserControl.Resources>

    <Grid CornerRadius="10">
        <Border
            Background="{StaticResource MissonBackground}"
            BorderBrush="{StaticResource MissonDefaultColor}"
            BorderThickness="10"
            CornerRadius="10" />

        <!--  Описание задачи  -->
        <StackPanel
            Padding="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Spacing="5">

            <!--  Заголовок  -->
            <TextBlock d:Text="Title" Style="{StaticResource MissionTextStyle}" />
            <!--<TextBlock d:Text="Start - 01.01.1999" Style="{StaticResource MissionTextStyle}" />
            <TextBlock d:Text="End - 01.02.1999" Style="{StaticResource MissionTextStyle}" />-->
        </StackPanel>
    </Grid>
</UserControl>
