<UserControl
    x:Class="SchedulingApp.Controls.Elements.RowItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SchedulingApp.Controls.Elements"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:SchedulingApp.Presenter.Entities.Abstraction"
    d:DataContext="{d:DesignInstance viewmodel:IRowItemViewModel}"
    d:DesignHeight="40"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <Border
            Margin="5"
            BorderBrush="{StaticResource AppMainBorderBrush}"
            BorderThickness="0,0,0,1" />
        <StackPanel Padding="10,0" Orientation="Horizontal">

            <!--  CheckBox для выбора задачи  -->
            <CheckBox
                MinWidth="20"
                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                Visibility="{Binding IsCheckEnabled, Mode=OneWay}" />

            <!--  Поле для ввода текста  -->
            <TextBox Style="{StaticResource TextBoxCustomStyle}"
                VerticalAlignment="Center"
                d:Text="Loren ipsum "
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Text="{Binding Text, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>
