<UserControl
    x:Class="SchedulingApp.Controls.MissionThumbControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SchedulingApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:SchedulingApp.Presenter.Entities.Abstraction"
    d:DataContext="{d:DesignInstance viewmodel:IMissionViewModel}"
    d:DesignHeight="140"
    d:DesignWidth="140"
    mc:Ignorable="d">

    <Grid MinWidth="100" MinHeight="80">

        <!--  Фон контрола  -->
        <Border
            Background="{ThemeResource SystemAccentColorLight3}"
            BorderBrush="{StaticResource AppMainBorderBrush}"
            BorderThickness="1"
            CornerRadius="5" />

        <!--  Контент контрола  -->
        <StackPanel Padding="20,20,10,20" HorizontalAlignment="Left">
            <TextBlock Text="{Binding Title}" />
            <TextBlock Text="{Binding StartDateTime}" />
            <TextBlock Text="{Binding EndDateTime}" />
        </StackPanel>
    </Grid>
</UserControl>
